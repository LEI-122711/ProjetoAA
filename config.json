{
    "//_COMENTARIO_GERAL": "--- CONFIGURAÇÃO GERAL ---",
    "//_MODOS": "Opções: 'treino' (aprende e guarda) ou 'teste' (carrega e executa)",
    "modo": "teste",

    "//_VISUALIZACAO": "Se true, mostra a janela. Em treino, recomendo false para ser rápido",
    "visualizar": true,

    "//_AMBIENTE": "--- CONFIGURAÇÃO DO MUNDO ---",
    "ambiente": {
        "//_TIPO": "Opções: 'farol' ou 'labirinto'",
        "tipo": "labirinto",

        "//_DIFICULDADE": "Apenas para Labirinto: 1 (Fácil), 2 (Médio), 3 (Difícil)",
        "dificuldade": 3,

        "//_OBSTACULOS_FAROL": "Apenas para Farol: Lista de coordenadas [x, y],adicionar [9,7] e [1,3] para teste",
        "obstaculos_extra": [[8, 7], [7, 7], [6, 7],[3,3],[2,3],[4,3]]
    },

    "//_AGENTES": "--- CONFIGURAÇÃO DOS AGENTES ---",
    "agentes": [
        {
            "//_CLASSE": "Opções: 'AgenteQLearning', 'AgenteLabirinto', 'AgenteFarol1'",
            "classe": "AgenteLabirinto",

            "//_PARAMETROS": "Usado apenas se for QLearning",
            "learning_rate": 0.1,
            "discount_factor": 0.9

        }
    ],

    "//_TREINO": "--- APENAS PARA MODO TREINO ---",
    "treino": {
        "episodios": 10000,
        "fator_decaimento_epsilon": 0.9
    }
